[user]
  name = magus
  email = noah@iamnoah.com

[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = delta --dark

[alias]
  # cherey pick faster
  cp = cherry-pick
  cpn = cherry-pick -n
  # View the SHA, description and history graph of last 20 commits
  l = log --pretty=oneline -n 20 --graph --color
  # View current working tree status
  s = status -sb
  # Cherry pick specific chunks for add
  a = add -p
  # Diff
  d = diff --staged
  kd = difftool --no-symlinks --dir-diff
  # Undo a 'git push'
  undopush = push -f origin HEAD^:master

  # https://bitbucket.org/tpettersen/git-aliases/src/
  alias = "!f() { \
            if [ \"$#\" -ne 2 ]; then { \
              echo >&2 \"Usage: git alias <name> <command>\"; \
              exit 1; \
            }fi; \
            git config --global alias.\"$1\" \"$2\"; \
          }; f"

  pr = !sh -c 'git branch $@ origin/$@ && git checkout $@' -

  branch-grep = "!f() { \
    if [[ ! $@ ]]; then \
      exit 1; \
    else \
      git branch --no-color | grep -i $1 -m1 | awk '{ print $NF }'; \
    fi \
  }; f"

  # Checkout branch > Checkout PR > Create PR
  go = "!f() { \
    local branch=$(git branch-grep $@); \
    if [[ $branch ]]; then \
      git checkout $branch; \
    else \
      git checkout -b dev/noah/$1; \
    fi \
  }; f"

  # Delete branch > Delete PR
  rb = "!f() { \
    local branch=$(git branch-grep $@); \
    if [[ $branch ]]; then \
      git branch -D $branch; \
    else \
      echo \"Cannot find branch ($@)\"; \
    fi \
  }; f"

# so much color
[color]
  # Use colors in git output where capable
  ui = always
[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[merge]
  # Include summaries of merged commits in new merge commit messages
  log = true
  ff = false

[pull]
  ff = only

[push]
  followTags = true

[remote "origin"]
  push = HEAD

# Use 'origin' as the default remote on 'master' branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
  pushInsteadOf = "https://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@github.com:magus/"]
  insteadOf = "git://github.com/magus/"

[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
