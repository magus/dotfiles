#!/bin/bash

SEARCH=${@:-''}

SEP="â†’"

FORMAT=""
FORMAT+="(%(color:green)%(committerdate:relative)%(color:reset))$SEP"
FORMAT+="%(HEAD) %(color:yellow)%(refname:short)%(color:reset)$SEP"
FORMAT+="%(authorname)$SEP"
FORMAT+="%(contents:subject)"

git for-each-ref \
  --color=always \
  --sort=committerdate refs/heads/ \
  --format="$FORMAT" \
  | grep -i "$SEARCH" \
  | column -ts "$SEP"
