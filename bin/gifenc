#!/bin/sh
# high quality gif with ffmpeg
# http://blog.pkh.me/p/21-high-quality-gif-with-ffmpeg.html
# usage: gifenc <input> [<output> <res> <fps>]
# example: gifenc video.mp4 output.gif 480 10
# outputs to output.gif at 480 scale and 10 fps

# INPUT is required
INPUT=$1
if [ ! -f $INPUT ]; then
   echo "$INPUT does not exist"
   exit 1
fi

OUTPUT=${2:-"${INPUT%.*}.gif"}  # Default to <INPUT>.gif
RES=${3:-"720"}                 # Default to 720p
FPS=${4:-"15"}                  # Default to 15 fps

palette="/tmp/palette.png"

filters="fps=$FPS,scale=$RES:-1:flags=lanczos"

ffmpeg -v warning -i $INPUT -vf "$filters,palettegen" -y $palette
ffmpeg -v warning -i $INPUT -i $palette -lavfi "$filters [x]; [x][1:v] paletteuse" -y $OUTPUT
